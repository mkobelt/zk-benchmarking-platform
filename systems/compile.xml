<?xml version="1.0"?>
<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 2.3//EN" "https://www.sosy-lab.org/benchexec/benchmark-2.3.dtd">

<benchmark tool="tools.zokrates" displayName="ZoKrates">
    <option name="compile"/>
    <option name="--r1cs">/dev/null</option>
    <option name="--output">${inputfile_name}.out</option>

    <tasks>
        <include>*.zok</include>
    </tasks>

    <rundefinition name="bn128">
        <option name="--curve">bn128</option>
    </rundefinition>
    <rundefinition name="bls12_381">
        <option name="--curve">bls12_381</option>
    </rundefinition>
    <rundefinition name="bls12_377">
        <option name="--curve">bls12_377</option>
    </rundefinition>
    <rundefinition name="bw6_761">
        <option name="--curve">bw6_761</option>
    </rundefinition>
</benchmark>
